
<PauseWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(90)
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: root.parent.pause_widget_title
        pos_hint: {"center_x": 0.5, "top": 1}
                                                    