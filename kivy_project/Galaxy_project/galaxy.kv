#:import menu menu
#: import settings menu
MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "bg1.jpg"
    menu_widget: menu_window
    settings_widget: settings_window
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWindow:
        id: menu_window
    SettingsWindow:
        id: settings_window
    Label:
        id: score
        text: root.score_txt
        font_size: dp(25)
        font_name: "fonts/Lcd.ttf"
        size_hint: .2, .2
        pos_hint: {"x": 0, "top": 1}