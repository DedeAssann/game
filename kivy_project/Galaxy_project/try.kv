<WindowManager@ScreenManager>:

#First Window & it's Widget


<FirstWidget>:
    canvas.before:
        Color:
            rgba: .2, .5, .9, .6
        Rectangle:
            size: self.size
            source: "bg1.jpg"
<FirstWindow>:
    name: "first"
