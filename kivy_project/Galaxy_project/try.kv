# Main Window & it's widget


<MainWindow>:
    name: "main"
    canvas.before:
        Color:
            rgba: 0, 0, 0, .3
        Rectangle:
            size: self.size
    main_widget: main_widget
    MainWidget:
        id: main_widget


<MainWidget>:
    padding: dp(5)
    canvas.before:
        Color:
            rgba: .2, .5, .9, 1
        Rectangle:
            size: self.size
            source: "bg1.jpg"
    GridLayout:
        canvas:
            Color:
                rgba: .282, .694, .882, .8
            Line:
                width: dp(1)
                rectangle: self.x, self.y, self.width, self.height
        cols: 3
        size_hint: 1, .08
        pos_hint: {"left": 1, "top": 1}
        MyCustomButton:
            pos_hint: {"right": .15, "top": 1}
            size_hint: .15, 1
            text: "E x i t"
            font_size: dp(22)
            font_name: "fonts/Eurostile.ttf"
            on_press:
                app.get_running_app().stop()
        BackgroundLabel:
            text:' S  E  T  T  I  N  G  S '
            size: self.texture_size
            bold: True
            italic: True
            #underline: True
            halign: "justify"
            valign: "middle"
            font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
            pos_hint: {"center_x": .5, "top": 1}
            size_hint: .7, 1
            font_size: dp(45)
        MyCustomButton:
            pos_hint: {"right": 1, "top": 1}
            size_hint: .15, 1
            text: "H o m e"
            font_size: dp(22)
            font_name: "fonts/Eurostile.ttf"
            on_press: root.parent.manager.current = "first"
    ScrollView:
        pos_hint: {"left": 1, "top": .9}
        stack: stack
        do_scroll_x: False
        do_scroll_y: True
        always_overscoll: True
        bar_width: dp(5)
        bar_color: _bc
        smooth_scroll_end: dp(8)
        scroll_wheel_distance: dp(45)
        StackWidget:
            id: stack
            size_hint: 1, None
            height: self.minimum_height



