WindowManager:
    MainWindow:
    SecondWindow:


# The main Window

<MainWindow>:
    name: "main"
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        #BorderImage:
        #    border: 10, 10, 10, 10
        #    texture: root.background_image.texture
        #    pos: self.pos
        #    size: self.size
        Rectangle:
            size: self.size
            source: "bg1.jpg"
    Label:
        font_size: dp(60)
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: "M E N U  P A G E"
        pos_hint: {"center_x": .5, "center_y": .65}
    Button:
        canvas.before:
            Color:
                rgba: .2, .7, 1, 1
            Line:
                width: dp(2)
                rectangle: self.x, self.y, self.width, self.height
        font_size: dp(30)
        font_name: "fonts/Eurostile.ttf"
        text: "S E T T I N G S"
        pos_hint: { "center_x": .5, "center_y": .3}
        size_hint: .3, .1
        on_press:
            app.root.current = "second"
            root.manager.transition.direction = "left"
        background_color: 1, .5, 1, 1


# Second Window

<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        #RelativeLayout:
        #    canvas.before:
        #        Color:
        #            rgba: 0, 0, 0, 1
        #        Rectangle:
        #            size: self.size
        #    pos_hint: {'right': 1, 'top': 1}
        #    size_hint: 1, .45
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            size_hint: 1, .45
            pos_hint: {"center_x": .5, "top": 1}
            canvas.before:
                Color:
                    rgba: 0.2, 1, 1, 1
                Line:
                    width: dp(3)
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    size: self.size
            Button:
                anchor_x: "x"
                anchor_y: "top"
                canvas.before:
                    Color:
                        #rgba: .2, .7, 1, .25
                        rgba: 1, 0, 0, 1
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                text: "G O  B A C K"
                #pos_hint: { "x": .22, "top": 1}
                size_hint: 0.22, 0.15
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"            
            #anchor_x: "center"
            #anchor_y: "center"
            Label:
                #canvas:
                #    Color:
                #        rgba: 0.1, 1, 1, 1
                #    Line:
                #        width: dp(2)
                #        rectangle: self.x, self.y, self.width, self.height                        
                text: root.display_text
                font_size: dp(25)
                #pos_hint: {"x": 0, "center_y": 0}
                size_hint: 1, .67
            Label:
                font_size: dp(17)
                text:'Settings Page'
                #pos_hint: {"center_x": .5, "center_y": 1}
                size_hint: 1, .16
        GridLayout:
            rows:2
            cols:4
            spacing: dp(15)
            Button_1:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                text_to_display: 
                    """
                    S C O R E : Your score is 100
                    Best Score is 100
                    """
                on_press: root.on_button_pressed(self.text_to_display)
            Button_2:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.on_button_pressed(self.text)
            Button_3:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.on_button_pressed(self.text)
            Button_4:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.on_button_pressed(self.text)
            Button_5:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .5
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.on_button_pressed(self.text)
            Button_6:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .5
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.on_button_pressed(self.text)
            Button_7:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .5
