        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        text:'Welcome'
    GridLayout:
        cols: 2
        Button:
            pos_hint: {"center_x": .5, "top": 1}
            size: dp(30), dp(20)
            text: "Main Page"
            font_size: dp(25)
            on_press: root.manager.current = "main"
        Button:
            id: my_sexy_btn
            text: "My sexy Button"
