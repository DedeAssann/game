#: import Screen kivy.uix.screenmanager
#: import ScreenManager kivy.uix.screenmanager

##: set display_text "ASSANN"
WindowManager:
    MainWindow:
    SecondWindow:


# The main Window

<MainWindow@Screen>:
    name: "main"
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: "M E N U  P A G E"
        pos_hint: {"center_x": .5, "center_y": .65}
    Button:
        canvas.before:
            Color:
                rgba: .2, .7, 1, 1
            Line:
                width: dp(2)
                rectangle: self.x, self.y, self.width, self.height
        font_size: dp(30)
        font_name: "fonts/Eurostile.ttf"
        text: "S E T T I N G S"
        pos_hint: { "center_x": .5, "center_y": .3}
        size_hint: .3, .1
        on_press:
            app.root.current = "second"
            root.manager.transition.direction = "left"
        background_color: 1, .5, 1, 1


# Second Window

<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, .98
        RelativeLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    size: self.size
            pos_hint: {'right': 1, 'top': 1}
            size_hint: 1, .15
            Button:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
                text: "G O  B A C K"
                pos_hint: { "right": 0.25, "center_y": 1}
                size_hint: 0.25, 0.5
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Label:
                canvas:
                    Color:
                        rgba: 0.1, 1, 1, 1
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height                        
                text: root.display_text
                font_size: dp(33)
                pos_hint: {"x": 0, "center_y":.40}
                size_hint: 1, .7
            Label:
                font_size: dp(40)
                text:'Settings Page'
                pos_hint: {"center_x": .5, "center_y": 1}
                size_hint: .5, .5
        GridLayout:
            rows:2
            cols:4
            spacing: dp(15)
            Button_1:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
            Button_2:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
            Button_3:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
            Button_4:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .25
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
            Button_5:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .5
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
            Button_6:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .5
                    Line:
                        width: dp(2)
                        rectangle: self.x, self.y, self.width, self.height
            Button_7:
                canvas.before:
                    Color:
                        rgba: .2, .7, 1, .5
